{
	"plugins": ["stylelint-order", "stylelint-prettier"],
	"extends": [
		"stylelint-config-standard-scss",
		"stylelint-prettier/recommended"
	],
	"rules": {
		"prettier/prettier": [
			true,
			{
				"endOfLine": "auto"
			}
		],
		"indentation": "tab",
		"declaration-no-important": true,
		"selector-id-pattern": "^[a-z]([-]?[a-z0-9]+)*(__[a-z0-9]([-]?[a-z0-9]+)*)?(--[a-z0-9]([-]?[a-z0-9]+)*)?$",
		"selector-class-pattern": "^[a-z]([-]?[a-z0-9]+)*(__[a-z0-9]([-]?[a-z0-9]+)*)?(--[a-z0-9]([-]?[a-z0-9]+)*)?$",
		"declaration-colon-space-after": "always-single-line",
		"function-comma-space-after": "always",
		"selector-list-comma-newline-after": "always",
		"block-opening-brace-space-before": "always",
		"string-quotes": "single",
		"order/order": [
			"custom-properties",
			"dollar-variables",
			"declarations",
			"rules",
			"at-rules"
		],
		"declaration-block-no-redundant-longhand-properties": [
			true,
			{ "ignoreShorthands": ["/grid/"] }
		],
		"order/properties-order": [
			"position",
			"z-index",
			"inset",
			"left",
			"top",
			"right",
			"bottom",

			"display",
			"overflow",
			"gap",

			"grid-template",
			"grid-template-columns",
			"grid-template-rows",
			"grid-template-areas",
			"grid-auto-columns",
			"grid-auto-rows",
			"grid-auto-flow",
			"grid-area",
			"grid-column",
			"grid-row",
			"grid-column-start",
			"grid-column-end",
			"grid-row-start",
			"grid-row-end",

			"box-sizing",
			"flex",
			"flex-basis",
			"flex-direction",
			"flex-flow",
			"flex-grow",
			"flex-wrap",
			"flex-shrink",

			"place-content",
			"place-items",
			"place-self",
			"justify-content",
			"align-content",
			"justify-items",
			"align-items",
			"justify-self",
			"align-self",
			"order",

			"content",

			"width",
			"max-width",
			"min-width",

			"height",
			"max-height",
			"min-height",

			"padding",
			"padding-block",
			"padding-inline",
			"padding-block-start",
			"padding-inline-start",
			"padding-block-end",
			"padding-inline-end",
			"padding-top",
			"padding-right",
			"padding-bottom",
			"padding-left",

			"border",
			"border-radius",
			"border-top",
			"border-left",
			"border-bottom",
			"border-right",
			"border-color",
			"border-width",
			"border-style",
			"border-collapse",
			"border-spacing",
			"border-block",
			"border-inline",
			"border-image",
			"border-top-left-radius",
			"border-top-right-radius",
			"border-bottom-right-radius",
			"border-bottom-left-radius",
			"border-bottom-color",
			"border-bottom-width",
			"border-bottom-style",
			"border-top-color",
			"border-top-width",
			"border-top-style",
			"border-right-color",
			"border-right-width",
			"border-right-style",
			"border-left-color",
			"border-left-width",
			"border-left-style",
			"border-block-start",
			"border-inline-end",
			"border-block-end",
			"border-inline-start",
			"border-block-color",
			"border-block-style",
			"border-block-width",
			"border-block-end-color",
			"border-block-end-width",
			"border-block-end-style",
			"border-block-start-color",
			"border-block-start-style",
			"border-block-start-width",
			"border-end-start-radius",
			"border-end-end-radius",
			"border-image-outset",
			"border-image-repeat",
			"border-image-slice",
			"border-image-source",
			"border-image-width",
			"border-inline-color",
			"border-inline-style",
			"border-inline-width",
			"border-inline-start-color",
			"border-inline-start-style",
			"border-inline-start-width",
			"border-inline-end-color",
			"border-inline-end-style",
			"border-inline-end-width",

			"margin",
			"margin-top",
			"margin-left",
			"margin-bottom",
			"margin-right",
			"margin-block",
			"margin-inline",
			"margin-block-start",
			"margin-inline-end",
			"margin-block-end",
			"margin-inline-start",
			"margin-trim",

			"background",
			"background-image",
			"background-color",
			"background-position",
			"background-repeat",
			"background-size",
			"background-clip",
			"background-attachment",
			"background-position-x",
			"background-position-y",
			"background-origin",
			"background-blend-mode",

			"font-family",
			"src",
			"font-size",
			"font-weight",
			"font-style",
			"font-display",
			"font-variant",
			"font-feature-settings",
			"font-stretch",
			"font-variant-ligatures",
			"font-variant-numeric",
			"font-kerning",
			"font-language-override",
			"font-optical-sizing",
			"font-size-adjust",
			"font-synthesis",
			"font-variant-alternates",
			"font-variant-caps",
			"font-variant-east-asian",
			"font-variant-position",
			"font-variation-settings",
			"writing-mode",
			"direction",
			"color",

			"text-orientation",
			"text-align",
			"text-justify",
			"text-decoration",
			"text-decoration-line",
			"text-decoration-color",
			"text-decoration-skip",
			"text-decoration-style",
			"text-decoration-skip-ink",
			"text-decoration-thickness",
			"text-transform",
			"text-overflow",
			"text-shadow",
			"text-rendering",
			"text-indent",
			"text-size-adjust",
			"text-align-last",
			"text-anchor",
			"text-combine-upright",
			"text-emphasis",
			"text-emphasis-color",
			"text-emphasis-position",
			"text-emphasis-style",
			"text-combine-upright",
			"text-underline-offset",
			"text-underline-position",

			"vertical-align",

			"shadow-box",

			"scroll-behavior",
			"opacity",

			"transition",
			"transition-property",
			"transition-duration",
			"transition-timing-function",
			"transition-delay",

			"transform",
			"transform-origin",
			"transform-style",
			"transform-box",

			"animation",
			"animation-name",
			"animation-duration",
			"animation-timing-function",
			"animation-delay",
			"animation-iteration-count",
			"animation-direction",
			"animation-fill-mode",
			"animation-play-state",
			"animation-composition",
			"animation-timeline"
		],
		"unit-allowed-list": [
			"vh",
			"vw",
			"px",
			"%",
			"fr",
			"rem",
			"em",
			"deg",
			"s",
			"ms"
		],
		"scss/dollar-variable-pattern": "^^_?[a-z0-9]+(-[a-z0-9]+)*$"
	}
}
